[
  {
    "name": "uwsgi",
    "image": "kshina76/uwsgi:latest",
    "essential": true,
    "logConfiguration":{
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "uwsgi",
        "awslogs-group": "/ecs/example"
      }
    }
  },
  {
    "name": "nginx",
    "image": "kshina76/nginx:latest",
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "nginx",
        "awslogs-group": "/ecs/example"
      }
    },
    "portMappings": [
      {
        "protocol": "tcp",
        "hostPort": 80,
        "containerPort": 80
      }
    ],
    "dependsOn" : [
      {
        "containerName": "uwsgi",
        "condition": "START"
      }
    ]
  }
]
